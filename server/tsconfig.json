{
	"compilerOptions": {
		"target": "es5",
		"module": "commonjs",
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"resolveJsonModule": true,
		"lib": [
			"es6",
			"dom",
			"esnext.asynciterable"
		]
	},
	"include": [
		"*.ts"
	],
	"exclude": [
		"node_modules",
	]
}